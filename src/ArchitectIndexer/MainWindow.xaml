<Window x:Class="ArchitectIndexer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchitectIndexer" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="PlanFind" Height="450" Width="800">
    <Window.DataContext>
        <local:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  Grid.Row="0"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Margin="10">
            <Image Source="/Resources/PlanFind.png"
    VerticalAlignment="Top" Margin="0,0,0,0" Width="300" Height="90" HorizontalAlignment="Left"/>
            <StackPanel>
                <TextBlock Text="Welcome to PlanFind!" 
    FontSize="24" 
    FontWeight="Bold" 
    HorizontalAlignment="Center" 
    VerticalAlignment="Top" 
    Margin="0,0,0,0"/>
                <TextBlock Text="PlanFind - Architectural Plan Indexer" 
                       FontSize="20" 
                       FontWeight="Bold"/>

               
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Height="30" HorizontalAlignment="Stretch">
            <Button Content="Select Directory"  Width="100" Margin="20,0,20,0" Command="{Binding _folderBrowser}"/>
            <TextBox Text="{Binding folder}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   
                   Margin="0,0,0,0" Width="400" />
            <Button Content="StartIndexing"  Width="100"  Margin="20,0,20,0" Command="{Binding _startIndexing}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
        <TextBox  Height="30" Width="500" Text="{Binding Query }"/>
            <Button Content="Search" Height="30" Width="80" Command="{Binding _search}"/>
        </StackPanel>
        <wv2:WebView2 x:Name="HtmlView" Source="about:blank" Grid.Row="3" />
    </Grid>
</Window>
